@model AuctionSite1.Models.ForgotPasswordViewModel

<div class="card col-md-5 ">
	<div class="card-body col-md-10">
		<form asp-action="ForgotPassword" asp-controller="Users" method="post">
			<div class="form-group ">
				<label for="UserName">Användarnamn:</label>
				<input type="text" id="UserName" asp-for="Email" class="form-control" />
			</div>

			<button type="submit" class="btn btn-success float-left">Vidare</button>
			<a class="float-right mt-2" asp-controller="Users" asp-action="LogIn">Tillbaka till logga in?</a>
		</form>
	</div>

</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
