@model AuctionSite1.Models.ViewModels.ResetPasswordViewModel


<div class="card">
	<div class="card-body">
		<form asp-action="ResetPassword" asp-controller="Users" method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label for="email">Emailadress:</label>
				<input id="email" asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label for="pass1"> Lösenord: </label>
				<input asp-for="Password" id="pass1" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label for="pass2">Verifiera lösenord:</label>
				<input id="pass2" asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-success">Skapa</button>
		</form>
	</div>
</div>
