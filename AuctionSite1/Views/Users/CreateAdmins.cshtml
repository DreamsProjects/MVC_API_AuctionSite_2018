@model AuctionSite1.Models.ViewModels.AdminCreatorViewModel


<div class="row">
	<div class="card mt-lg-3 ml-lg-5">
		<h5 class="card-header bg-dark text-white">
			Ändra roll på användare
		</h5>
		<div class="card-body">
			<form asp-controller="Users" asp-action="CreateAdmins" method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label>Användare:</label>

					<select asp-for=" Id" asp-items="@Model.User" class="form-control">
					</select>
					<span asp-validation-for="Id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label>Roll:</label>

					<select asp-for="Role" asp-items="@Model.Roles" class="form-control">
					</select>
					<span asp-validation-for="Role" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-success">Ändra</button>
			</form>
		</div>
	</div>
</div>